# TalentVector AI - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===== CRITICAL API KEYS =====
# Set to your actual API key from: https://ai.google.dev/
# This is REQUIRED for the application to work
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Use Ollama instead of Gemini for local inference
# Set GEMINI_API_KEY to empty if using Ollama
USE_OLLAMA=false

# ===== LLM Configuration =====
# Gemini model to use for structuring and evaluation
GEMINI_MODEL=gemini-1.5-pro

# Embedding model for vector similarity
EMBEDDING_MODEL=models/embedding-001

# ===== Ollama Configuration (for local LLM inference) =====
# Only used if USE_OLLAMA=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# ===== Backend API Configuration =====
# Host and port for FastAPI backend
API_HOST=0.0.0.0
API_PORT=8000

# Frontend API URL (used by Vite frontend)
VITE_API_URL=http://localhost:8000

# ===== Feature Flags =====
# Enable/disable PDF extraction feature
ENABLE_PDF_PARSING=true

# Enable/disable candidate screening feature
ENABLE_SCREENING=true

# ===== Database Configuration (Optional) =====
# SQLite database paths (created automatically if they don't exist)
DATABASE_PATH=./data/talentvector.db
FEEDBACK_DB_PATH=./data/feedback.db

# ===== Application Settings (Optional) =====
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# API retry configuration
MAX_RETRIES=3
REQUEST_TIMEOUT=30
